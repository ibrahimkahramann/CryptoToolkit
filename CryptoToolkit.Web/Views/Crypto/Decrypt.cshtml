@model dynamic
@{
    ViewData["Title"] = "Şifre Çözme";
}

<div class="min-h-screen bg-[#111922] text-white px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold mb-2">Şifre Çözme</h1>
            <p class="text-gray-400">Şifrelenmiş verilerinizi doğru anahtarlarla çözün</p>
        </div>

        <div class="bg-[#1a2532] rounded-xl p-6 shadow-xl">
            <!-- Form Header -->
            <div class="flex items-center mb-6 pb-4 border-b border-gray-700">
                <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-semibold">Şifre Çözme</h2>
                    <p class="text-gray-400">Şifreli metinleri çözün</p>
                </div>
            </div>            <!-- Error Display -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-500/10 border border-red-500 rounded-lg p-4 mb-6">
                    <ul class="list-disc list-inside text-red-400">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Decrypt" method="post" class="space-y-6">
                <!-- Algorithm Selection -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-3">Şifreleme Algoritması</label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <label for="aesMethod" class="relative cursor-pointer">
                            <input type="radio" class="sr-only" name="method" id="aesMethod" value="AES" checked>
                            <div class="bg-[#243447] border-2 border-gray-600 rounded-lg p-4 hover:border-blue-400 transition-colors duration-200 peer-checked:border-blue-400 peer-checked:bg-blue-500/10">
                                <div class="flex items-center">
                                    <svg class="w-5 h-5 text-blue-400 mr-3" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
                                    </svg>
                                    <div>
                                        <div class="font-medium">AES-256</div>
                                        <div class="text-sm text-gray-400">Simetrik Şifreleme (CBC)</div>
                                    </div>
                                </div>
                            </div>
                        </label>
                        
                        <label for="rsaMethod" class="relative cursor-pointer">
                            <input type="radio" class="sr-only" name="method" id="rsaMethod" value="RSA">
                            <div class="bg-[#243447] border-2 border-gray-600 rounded-lg p-4 hover:border-blue-400 transition-colors duration-200 peer-checked:border-blue-400 peer-checked:bg-blue-500/10">
                                <div class="flex items-center">
                                    <svg class="w-5 h-5 text-blue-400 mr-3" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5V1h3zm1 0h2.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H5V1zm4 0v6a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5V1h3zm1 0h2.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H10V1z"/>
                                    </svg>
                                    <div>
                                        <div class="font-medium">RSA-2048</div>
                                        <div class="text-sm text-gray-400">Asimetrik Şifreleme</div>
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Encrypted Text -->
                <div>
                    <label for="cipherText" class="block text-sm font-medium text-gray-300 mb-2">Şifreli Metin</label>
                    <div class="relative">
                        <textarea class="w-full bg-[#243447] border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-blue-400 focus:outline-none resize-none" 
                                id="cipherText" name="cipherText" rows="4" 
                                placeholder="Çözmek istediğiniz şifreli metni buraya yapıştırın..." required></textarea>
                    </div>
                </div>                <!-- AES Fields -->
                <div id="aesFields" class="space-y-4">
                    <div class="bg-yellow-500/10 border border-yellow-500/30 rounded-lg p-4">
                        <h3 class="text-lg font-medium text-yellow-400 mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1z"/>
                            </svg>
                            AES Anahtarları
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label for="key" class="block text-sm font-medium text-gray-300 mb-2">AES Anahtarı</label>
                                <input type="text" class="w-full bg-[#243447] border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-yellow-400 focus:outline-none" 
                                       id="key" name="key" placeholder="Şifreleme anahtarını girin" />
                            </div>
                            <div>
                                <label for="iv" class="block text-sm font-medium text-gray-300 mb-2">Başlatma Vektörü (IV)</label>
                                <input type="text" class="w-full bg-[#243447] border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-yellow-400 focus:outline-none" 
                                       id="iv" name="iv" placeholder="IV değerini girin" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- RSA Fields -->
                <div id="rsaFields" class="space-y-4 hidden">
                    <div class="bg-green-500/10 border border-green-500/30 rounded-lg p-4">
                        <h3 class="text-lg font-medium text-green-400 mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1z"/>
                            </svg>
                            RSA Özel Anahtarı
                        </h3>
                        <div>
                            <label for="privateKey" class="block text-sm font-medium text-gray-300 mb-2">RSA Özel Anahtarı</label>
                            <textarea class="w-full bg-[#243447] border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-green-400 focus:outline-none resize-none" 
                                    id="privateKey" name="privateKey" rows="3" 
                                    placeholder="RSA özel anahtarını buraya yapıştırın..."></textarea>
                            <p class="text-sm text-gray-400 mt-2">
                                <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                </svg>
                                Şifrelenmiş veriyi çözebilmek için özel anahtara sahip olmalısınız
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-between items-center pt-6">
                    <a asp-controller="Crypto" asp-action="Encrypt" class="inline-flex items-center px-4 py-2 border border-gray-600 rounded-lg text-gray-300 hover:text-white hover:border-gray-500 transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                        </svg>
                        Şifreleme
                    </a>
                    <button type="submit" class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                        </svg>
                        Şifreyi Çöz
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Result Modal -->
@if (Model != null && Model?.PlainText != null)
{
    <div id="resultModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div class="bg-[#1a2532] rounded-xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
            <div class="bg-green-600 px-6 py-4 flex items-center justify-between">
                <h3 class="text-lg font-medium text-white flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                    </svg>
                    Şifre Çözme Başarılı
                </h3>
                <button onclick="closeModal()" class="text-white hover:text-gray-300">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="p-6">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-300 mb-2">Çözülen Metin:</label>
                    <div class="bg-[#243447] rounded-lg p-4 relative">
                        <pre class="text-white text-sm whitespace-pre-wrap break-words">@Model?.PlainText</pre>
                        <button onclick="copyToClipboard(this, '@Model?.PlainText?.Replace("'", "\\'")' || '')" 
                                class="absolute top-2 right-2 bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm flex items-center transition-colors duration-200">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                                <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                            </svg>
                            Kopyala
                        </button>
                    </div>
                </div>
                <div class="flex justify-end">
                    <button onclick="closeModal()" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors duration-200">
                        Kapat
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@if (Model != null && Model?.PlainText != null)
{
    <div class="max-w-4xl mx-auto mt-8 px-4">
        <div class="bg-[#1a2532] rounded-xl overflow-hidden">
            <div class="bg-green-600 px-6 py-4">
                <h3 class="text-lg font-medium text-white flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                    </svg>
                    Şifre Çözme Başarılı
                </h3>
            </div>
            <div class="p-6">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-300 mb-2">Çözülen Metin:</label>
                    <div class="bg-[#243447] rounded-lg p-4 relative">
                        <pre class="text-white text-sm whitespace-pre-wrap break-words">@Model?.PlainText</pre>
                        <button onclick="copyToClipboard(this, '@Model?.PlainText?.Replace("'", "\\'")' || '')" 
                                class="absolute top-2 right-2 bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm flex items-center transition-colors duration-200">
                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                                <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                            </svg>
                            Kopyala
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    // Algorithm method switching
    document.addEventListener('DOMContentLoaded', function() {
        const aesMethod = document.getElementById('aesMethod');
        const rsaMethod = document.getElementById('rsaMethod');
        const aesFields = document.getElementById('aesFields');
        const rsaFields = document.getElementById('rsaFields');

        function toggleFields() {
            if (aesMethod.checked) {
                aesFields.classList.remove('hidden');
                rsaFields.classList.add('hidden');
            } else {
                aesFields.classList.add('hidden');
                rsaFields.classList.remove('hidden');
            }
        }

        aesMethod.addEventListener('change', toggleFields);
        rsaMethod.addEventListener('change', toggleFields);
        
        // Initial state
        toggleFields();
    });

    // Modal management
    function closeModal() {
        const modal = document.getElementById('resultModal');
        if (modal) {
            modal.style.display = 'none';
        }
    }

    // Copy to clipboard functionality
    function copyToClipboard(button, text) {
        navigator.clipboard.writeText(text).then(
            function() {
                const originalContent = button.innerHTML;
                button.innerHTML = `<svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                </svg>Kopyalandı`;
                button.classList.remove('bg-blue-600', 'hover:bg-blue-700');
                button.classList.add('bg-green-600', 'hover:bg-green-700');
                
                setTimeout(function() {
                    button.innerHTML = originalContent;
                    button.classList.remove('bg-green-600', 'hover:bg-green-700');
                    button.classList.add('bg-blue-600', 'hover:bg-blue-700');
                }, 2000);
            },
            function() {
                // Error handling - could add toast notification here
                console.error('Failed to copy to clipboard');
            }
        );
    }
</script>
